<Window x:Class="GymAdministration.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="300" Width="525">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF7C3B3B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Margin="10 10" Orientation="Vertical" >

            <TextBox x:Name="textBoxId" Margin="10 10" Text="{Binding ID}" Height="20" ToolTip=""/>

            <Button  VerticalAlignment="Bottom" Margin="10 10" Height="20" Width="100" Click="buttonIdFind_Click" Content="Find by card ID"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10 10" Orientation="Vertical" >

            <TextBox x:Name="textBoxName" Margin="10 10" Text="{Binding LastName}" Height="20" />
            <Button   VerticalAlignment="Bottom" Margin="10 10" Height="20" Width="100" Click="buttonNameFind_Click" Content="Find by lastname"/>
        </StackPanel>

        <Button   Grid.Row="3" Margin="40" VerticalAlignment="Bottom" Height="20" Width="100" Click="buttonSetting_Click" Content="Database settings" />
        <ComboBox Name="FoundByLNameClients" Height="25" Grid.Row="2" Grid.Column="1" ItemsSource="{Binding FoundClients}" MouseDoubleClick="mouseDoubleClickClient" SelectedItem="{Binding SelectedClient}" Margin="15 10"  Padding="5" BorderBrush="LightBlue" BorderThickness="2" Grid.ColumnSpan="2">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock  Margin="2 0" Text="{Binding FirstName}" />
                        <TextBlock  Margin="2 0" Text="{ Binding LastName}" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Button   Grid.Row="3" Grid.Column="1" Margin="40" VerticalAlignment="Bottom" Height="20" Width="100" Click="buttonStatustics_Click" Content="Print statistics" />


    </Grid>
</Window>

