<Window x:Class="GymAdministration.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF7C3B3B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1"  Orientation="Vertical" Background="#FFD44242">
            <TextBox Name="textBoxId" Text="{Binding ID}" Height="20" Margin="5 3" ToolTip=""></TextBox>

            <Button Margin="10 10" VerticalAlignment="Bottom" Height="20" Width="100" Click="buttonIdFind_Click" Content="Find by id"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" Background="white" Orientation="Horizontal">

            <TextBlock HorizontalAlignment="Center" Width="200" FontWeight="Bold" Margin="5 3">Info</TextBlock>

        </StackPanel>

        <StackPanel Grid.Row="2"  Orientation="Vertical" Background="#FFD44242">
            <TextBox Name="textBoxName" Height="20" Margin="5 3"></TextBox>
            <Button  Margin="10 10" VerticalAlignment="Bottom" Height="20" Width="100" Click="buttonNameFind_Click">Find by name</Button>


        </StackPanel>

        <Button  Margin="10 10" Grid.Row="3" VerticalAlignment="Bottom" Height="20" Width="100" Click="buttonAdd_Click">Add new client</Button>

        <Expander Grid.Row="2" Grid.Column="1" Margin="5" Header="{Binding Client}" Padding="5" BorderBrush="LightBlue" BorderThickness="2">
            <ListBox  Name="listBoxAddresses"  MaxHeight="400" ScrollViewer.VerticalScrollBarVisibility="Visible">

            </ListBox>
        </Expander>

    </Grid>
</Window>

