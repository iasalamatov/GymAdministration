<Window x:Class="GymAdministration.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox Name="textBoxPlace" Grid.Row="1" Height="20" Margin="5 3"></TextBox>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
            <Image Source="" Width="50"  Margin="5 3"></Image>
            <TextBlock HorizontalAlignment="Center" FontWeight="Bold" Margin="5 3"></TextBlock>

        </StackPanel>
        <Expander Grid.Row="2" Grid.Column="1" Margin="5" Header="{Binding Client}" Padding="5" BorderBrush="LightBlue" BorderThickness="2">
            <ListBox  Name="listBoxAddresses"  MaxHeight="400" ScrollViewer.VerticalScrollBarVisibility="Visible">

            </ListBox>
        </Expander>
        <Button Grid.Row="2" Grid.Column="0" Margin="10 10" VerticalAlignment="Bottom"  Height="20" Width="100" Click="buttonIdFind_Click">Get Info</Button>
        <Button Content="Add New Client" HorizontalAlignment="Left" Margin="24,46.333,0,-41" Grid.Row="3" VerticalAlignment="Top" Width="100" Click="Button_Click"/>

    </Grid>
</Window>
