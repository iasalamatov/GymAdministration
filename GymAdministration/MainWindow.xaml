<Window x:Class="GymAdministration.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF7C3B3B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1"  Orientation="Vertical" >

            <TextBox x:Name="textBoxId" Text="{Binding ID}" Height="20" Margin="25,3,-16.667,3" ToolTip=""/>

            <Button Margin="86,10,21.333,10" VerticalAlignment="Bottom" Height="20" Width="100" Click="buttonIdFind_Click" Content="Find by card ID"/>
        </StackPanel>
        <StackPanel Grid.Row="2"  Orientation="Vertical" >


            <Button  Margin="327,10,-219.667,10" VerticalAlignment="Bottom" Height="20" Width="100" Click="buttonNameFind_Click" Content="Find by lastname"/>


            <TextBox x:Name="textBoxName" Text="{Binding LastName}" Height="20" Margin="260,3,-252.667,3"/>


        </StackPanel>

        <Button  Margin="9.667,0,201.667,-76.667" Grid.Row="3" VerticalAlignment="Bottom" Height="20" Width="100" Click="buttonSetting_Click" Content="Database settings" Grid.Column="1"/>
        <ComboBox Name="FoundByLNameClients" Height="25" Grid.Row="3" ItemsSource="{Binding FoundClients}" MouseDoubleClick="mouseDoubleClickClient" SelectedItem="{Binding SelectedClient}" Margin="121,25,95.667,-18"  Padding="5" BorderBrush="LightBlue" BorderThickness="2" Grid.ColumnSpan="2">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock  Margin="2 0" Text="{Binding FirstName}" />
                        <TextBlock  Margin="2 0" Text="{ Binding LastName}" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>


    </Grid>
</Window>

